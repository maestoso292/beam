<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.gauravbhola.ripplepulsebackground.RipplePulseLayout
            android:id="@+id/layout_ripplepulse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            ripple:duration="1900"
            ripple:startRadius="110dp"
            ripple:endRadius="200dp"
            ripple:rippleColor="@color/light_grey"
            ripple:rippleType="stroke"
            ripple:strokeWidth="2dp">

            <TextView
                android:id="@+id/pulse_target"
                style="@style/TextAppearance.Beam.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@color/black" />

        </com.gauravbhola.ripplepulsebackground.RipplePulseLayout>
    </LinearLayout>


</FrameLayout>